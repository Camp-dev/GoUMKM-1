<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="go.id.kominfo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="go.id.kominfo.ACTIVITY.DetailProductActivity"></activity>
        <activity android:name="go.id.kominfo.ACTIVITY.RegisterActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name="go.id.kominfo.ACTIVITY.MainActivity"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="go.id.kominfo.ACTIVITY.SalesOrderActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name="go.id.kominfo.ACTIVITY.KeranjangActivity" />
        <activity android:name="go.id.kominfo.ACTIVITY.ProsesActivity" />
        <activity android:name="go.id.kominfo.ACTIVITY.NewProductActivity" />
        <activity android:name="go.id.kominfo.ACTIVITY.LoginActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name="go.id.kominfo.ACTIVITY.StatistikActivity" />



        <activity
            android:name="go.id.kominfo.ACTIVITY.FlashScreenActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"

            android:windowSoftInputMode="stateHidden|adjustPan"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>